[pager]
  diff = "delta"
  show = "diff-so-fancy | less --tabs=1,5 -RFXM"
[diff]
  indentHeuristic = on
  noprefix = true
  colorMoved = default
[diff "nodiff"]
  command = true

# Styling:
[color]
  ui = true
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = white bold 52
  newNormal = green bold
  newHighlight = white bold 22
[color "diff"]
  meta = black
  frag = blue bold
  commit = black bold
  old = red bold
  new = green bold
    whitespace = red reverse

